# BASH SKEL ENVIRONMENT
# INIT: . ~/.skelenv

PROFILE_D="profile.d"

C1='\033[1;32m'
C2='\033[1;36m'
C3='\033[1;30m'
C4='\033[0m'
C5="\033[0;32m"
C6='\033[1;32m'

[ ${EUID} == 0 ] && C5="\033[0;31m"
[ -e /etc/profile.env ] && . /etc/profile.env

# BASH GLOBAL ENV VARIABLES
export TERM="tmux-256color"
export LANG="ru_RU.utf8"
export EDITOR=${EDITOR:-/usr/bin/mcedit}
export PAGER=${PAGER:-/usr/bin/less}
export PATH="/bin:/sbin:/usr/bin:/usr/sbin:/vsys/scripts"

_init_profile() { for p in ${1}/*.sh ; do [ -r "$p" ] && . "$p" ; done ;}

[ -d "/etc/${PROFILE_D}/" ] \
&& _init_profile /etc/${PROFILE_D} \
|| [ -d "${HOME}/.${PROFILE_D}/" ] \
&& _init_profile ${HOME}/.${PROFILE_D}

# BASH ENV VARIABLES
HISTSIZE=10000
HISTFILE=${HOME}/.bash_history
PROMPT_COMMAND="history -a ; history -r ; $PROMPT_COMMAND"
PS1="\[${C3}\][\[${C5}\]\u\[${C3}\]@\[${C4}\]\H \w\[${C3}\]]\n\[${C3}\]-\[${C3}\]=\[${C4}\]>\[${C6}\]>\[${C4}\] "

# BASH ALIASES
alias m="mount"
alias p="ps xaf"
alias pp="ps axfwwu"
alias l="ls --color=auto"
alias ll="ls --color=auto -lha"
alias n="netstat -tupan"
alias nn="netstat -npa -A inet"
alias rm="rm -fr"
alias cp="cp -fr"
alias md="mkdir -p"
alias me="mcedit -d"

# BASH COMPLETIONS
shopt -s checkwinsize
shopt -s histappend
shopt -s cdspell
shopt -s nocaseglob

